<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>

    <referenceBlock name="logo">
      <arguments>
        <argument name="logo_file" xsi:type="string">images/logo.png</argument>
        <argument name="logo_img_width" xsi:type="number">200</argument>
        <argument name="logo_img_height" xsi:type="number">29</argument>
      </arguments>
    </referenceBlock>

    <referenceContainer name="header-wrapper">
      <container htmlTag="div" htmlClass="main menu" after="top.search">
	<container htmlTag="ul" htmlClass="menu links">
	  <block class="Magento\Framework\View\Element\Html\Link">
	    <arguments>
	      <argument name="label" xsi:type="string">Shop</argument>
	      <argument name="path" xsi:type="string">hard-nightguard.html</argument>
	    </arguments>
	  </block>
	  <block class="Magento\Framework\View\Element\Html\Link">
	    <arguments>
	      <argument name="label" xsi:type="string">Impressions</argument>
	      <argument name="path" xsi:type="string">impressions</argument>
	    </arguments>
	  </block>
	  <block class="Magento\Framework\View\Element\Html\Link">
	    <arguments>
	      <argument name="label" xsi:type="string">FAQ</argument>
	      <argument name="path" xsi:type="string">faq</argument>
	    </arguments>
	  </block>
	  <block class="Magento\Framework\View\Element\Html\Link">
	    <arguments>
	      <argument name="label" xsi:type="string">About</argument>
	      <argument name="path" xsi:type="string">about</argument>
	    </arguments>
	  </block>
	  <block class="Magento\Framework\View\Element\Html\Link">
	    <arguments>
	      <argument name="label" xsi:type="string">Contact</argument>
	      <argument name="path" xsi:type="string">contact</argument>
	    </arguments>
	  </block>
	</container>
      </container>
    </referenceContainer>

    <referenceBlock name="report.bugs" remove="true"/>
    <move element="copyright" destination="before.body.end"/>
  </body>
</page>

