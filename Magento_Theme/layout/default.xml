<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceBlock name="top.links" remove="true" />

    <referenceBlock name="logo">
      <arguments>
        <argument name="logo_file" xsi:type="string">images/logo.png</argument>
        <argument name="logo_img_width" xsi:type="number">200</argument>
        <argument name="logo_img_height" xsi:type="number">29</argument>
      </arguments>
    </referenceBlock>

    <referenceContainer name="header-wrapper">
      <block class="Magento\Theme\Block\Html\Topmenu" name="main.links">
	<arguments>
          <argument name="css_class" xsi:type="string">main links</argument>
        </arguments>
	<block class="Magento\Framework\View\Element\Html\Link">
	  <arguments>
	    <argument name="label" xsi:type="string">Shop</argument>
	    <argument name="path" xsi:type="string">hard-nightguard.html</argument>
	  </arguments>
	</block>
	<block class="Magento\Framework\View\Element\Html\Link">
	  <arguments>
	    <argument name="label" xsi:type="string">FAQ</argument>
	    <argument name="path" xsi:type="string">faq</argument>
	  </arguments>
	</block>
      </block>
    </referenceContainer>

    <referenceBlock name="report.bugs" remove="true"/>
    <move element="copyright" destination="before.body.end"/>
  </body>
</page>

