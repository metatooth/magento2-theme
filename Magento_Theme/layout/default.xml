<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links" remove="true" />

	<move element="my-account-link" destination="header.panel" after="top.search" />

	<referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument>
                <argument name="logo_img_height" xsi:type="number">29</argument>
            </arguments>
        </referenceBlock>

	<referenceContainer name="header-wrapper">
	  <block class="Magento\Customer\Block\Account\Navigation" name="main.links">
             <block class="Magento\Framework\View\Element\Html\Link" name="shop.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Shop</argument>
                    <argument name="path" xsi:type="string" translate="false">shop</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="impressions.link" after="shop.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Impressions</argument>
                    <argument name="path" xsi:type="string" translate="false">impressions</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="faq.link" after="impressions.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">FAQ</argument>
                    <argument name="path" xsi:type="string" translate="false">faq</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="aboutus.link" after="faq.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">About</argument>
                    <argument name="path" xsi:type="string" translate="false">about</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="contactus.link" after="aboutus.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Contact</argument>
                    <argument name="path" xsi:type="string" translate="false">contact</argument>
                </arguments>
            </block>
	  </block>
	</referenceContainer>

	<referenceBlock name="report.bugs" remove="true"/>
        <move element="copyright" destination="before.body.end"/>
    </body>
</page>
